// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id     String
  username     String
  password     String
  role     String
  email     String
  profile_picture     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Walks {
  id     String
  user_id     String
  walker_id     String
  start_time     Date
  end_time     Date
  location     GeoPoint
  status     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Reviews {
  id     String
  walk_id     String
  user_id     String
  rating     Integer
  comment     String?
  created_at     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

