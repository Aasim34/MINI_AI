// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id     String
  username     String
  email     String
  passwordHash     String
  createdAt     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Workouts {
  id     String
  userId     String
  type     String
  duration     Number
  caloriesBurned     Number
  date     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Goals {
  id     String
  userId     String
  goalType     String
  targetValue     Number
  progressValue     Number
  createdAt     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

