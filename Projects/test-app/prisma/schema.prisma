// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id     String
  username     String
  email     String
  passwordHash     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Posts {
  id     String
  userId     String
  content     Text
  createdAt     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

