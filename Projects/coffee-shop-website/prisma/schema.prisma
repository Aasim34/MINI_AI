// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id     String
  username     String
  email     String
  password     String
  created_at     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Menu_Items {
  id     String
  name     String
  description     String
  price     Number
  image_url     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Orders {
  id     String
  user_id     String
  menu_item_id     String
  quantity     Number
  status     String
  created_at     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Reviews {
  id     String
  user_id     String
  menu_item_id     String
  rating     Number
  comment     String?
  created_at     Date
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

